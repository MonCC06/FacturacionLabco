<script>
    function filtrarTabla() {
        // Obtén el texto ingresado en el campo de búsqueda y conviértelo a minúsculas.
        const filtro = document.getElementById("BuscarTrabajador").value.toLowerCase();

        // Obtén la referencia de la tabla donde se realizará el filtrado.
        const tabla = document.getElementById("TablaTrabajadores");

        // Obtén todas las filas de la tabla (<tr>), incluyendo encabezados y datos.
        const filas = tabla.getElementsByTagName("tr");

        // Verifica si el checkbox "Nombre" o "Cedula" está seleccionado.
        const filtrarPorNombre = document.getElementById("FiltroNombre").checked;
        const filtrarPorCedula = document.getElementById("FiltroCedula").checked;

        // Itera sobre todas las filas de la tabla, comenzando desde el índice 1 para saltar la fila de encabezado.
        for (let i = 1; i < filas.length; i++) {
            // Obtén todas las celdas (<td>) de la fila actual.
            const celdas = filas[i].getElementsByTagName("td");

            // Variable para determinar si esta fila debe mostrarse o no.
            let mostrarFila = false;

            // Si el checkbox "Nombre" está seleccionado:
            if (filtrarPorNombre) {
                // Verifica si el contenido de la celda en la columna 1 (Nombre) incluye el texto ingresado en el filtro.
                if (celdas[1] && celdas[1].innerText.toLowerCase().includes(filtro)) {
                    mostrarFila = true;
                }
            }

            // Si el checkbox "Cédula" está seleccionado:
            if (filtrarPorCedula) {
                // Verifica si el contenido de la celda en la columna 3 (Cédula) incluye el texto ingresado en el filtro.
                if (celdas[0] && celdas[0].innerText.toLowerCase().includes(filtro)) {
                    mostrarFila = true;
                }
            }

            // Si no se selecciona ningún filtro, busca en todas las columnas:
            if (!filtrarPorNombre && !filtrarPorCedula) {
                for (let j = 0; j < celdas.length; j++) {
                    if (celdas[j] && celdas[j].innerText.toLowerCase().includes(filtro)) {
                        mostrarFila = true;
                        break;
                    }
                }
            }

            // Muestra u oculta la fila según el valor de mostrarFila.
            filas[i].style.display = mostrarFila ? "" : "none";
        }
    }

</script>
