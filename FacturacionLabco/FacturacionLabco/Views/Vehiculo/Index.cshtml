                <li class="nav-item">
                    <a href="#" class="d-flex align-items-center justify-content-center">
                        <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-clipboard-check-fill" viewBox="0 0 16 16">
                            <path d="M6.5 0A1.5 1.5 0 0 0 5 1.5v1A1.5 1.5 0 0 0 6.5 4h3A1.5 1.5 0 0 0 11 2.5v-1A1.5 1.5 0 0 0 9.5 0zm3 1a.5.5 0 0 1 .5.5v1a.5.5 0 0 1-.5.5h-3a.5.5 0 0 1-.5-.5v-1a.5.5 0 0 1 .5-.5z" />
                            <path d="M4 1.5H3a2 2 0 0 0-2 2V14a2 2 0 0 0 2 2h10a2 2 0 0 0 2-2V3.5a2 2 0 0 0-2-2h-1v1A2.5 2.5 0 0 1 9.5 5h-3A2.5 2.5 0 0 1 4 2.5zm6.854 7.354-3 3a.5.5 0 0 1-.708 0l-1.5-1.5a.5.5 0 0 1 .708-.708L7.5 10.793l2.646-2.647a.5.5 0 0 1 .708.708" />
                        </svg>
                        <span class="fs-5 ms-2 d-none d-sm-inline">Productos</span>
                    </a>
                </li>
            </ul>
        </div>
    </div>

    <div class="container-fluid container-custom">
        <div class="row mb-4">
            <div class="col-12 col-md-6 d-flex align-items-center">
                <div class="volver">
                    <svg xmlns="http://www.w3.org/2000/svg" fill="currentColor" class="bi bi-arrow-left-circle-fill" viewBox="0 0 16 16">
                        <path d="M8 0a8 8 0 1 0 0 16A8 8 0 0 0 8 0m3.5 7.5a.5.5 0 0 1 0 1H5.707l2.147 2.146a.5.5 0 0 1-.708.708l-3-3a.5.5 0 0 1 0-.708l3-3a.5.5 0 1 1 .708.708L5.707 7.5z" />
                    </svg>
                    <h5>Buscar Vehiculo</h5>
                </div>
            </div>
            <div class="col-12 col-md-6 text-end user-info">
                <img src="https://via.placeholder.com/40" alt="User Avatar" class="avatar">
                <span class="user-name">User</span>
            </div>
        </div>
        <form action="/" method="post">

            </form>
        <div class="row mb-3">
            <div class="col-12 col-md-8">
                <div class="d-flex align-items-center">
                    <div class="form-check me-3">
                        <input class="form-check-input" type="radio" name="exampleRadios" id="NombreDueño" value="option1">
                        <label class="form-check-label" for="NombreDueño">
                            Nombre del Dueño
                        </label>
                    </div>
                    <div class="form-check">
                        <input class="form-check-input" type="radio" name="exampleRadios" id="Placa" value="option2">
                        <label class="form-check-label" for="Placa">
                            Placa
                        </label>
                    </div>
                </div>
                <div class="mb-4">
                </div>
                <input type="text" class="form-control" placeholder="Buscar Vehiculo">
            </div>
            <div class="col-12 col-md-3 text-start mt-5">
                <div class="modal modal-lg" id="ModalVehiculo" tabindex="-1" aria-labelledby="ModalVehiculo" style="display: none;"
                     aria-hidden="true">
                    <div class="modal-dialog modal-dialog-centered">
                        <div class="modal-content">
                            <div class="modal-body">
                                <div class="d-flex">
                                    <div class="volver">
                                        <button type="button" class="modalvolver" data-bs-dismiss="modal" aria-label="Close">
                                            <svg xmlns="http://www.w3.org/2000/svg" fill="currentColor" class="bi bi-arrow-left-circle-fill" viewBox="0 0 16 16">
                                                <path d="M8 0a8 8 0 1 0 0 16A8 8 0 0 0 8 0m3.5 7.5a.5.5 0 0 1 0 1H5.707l2.147 2.146a.5.5 0 0 1-.708.708l-3-3a.5.5 0 0 1 0-.708l3-3a.5.5 0 1 1 .708.708L5.707 7.5z" />
                                            </svg>
                                            <h1 class="modal-title fs-5" id="ModalVehiculoTitulo">Agregar Vehiculo</h1>
                                        </button>
                                    </div>
                                    <div class="col-12 col-md-6 text-start user-info">
                                        <img src="https://via.placeholder.com/40" alt="User Avatar" class="avatar">
                                        <span class="user-name">Messi</span>
                                    </div>
                                </div>
                                <div class="container-modal">
                                    <form asp-controller="Vehiculo" asp-action="Upsert" method="post">
                                        <div class="row">
                                            <div class="col text-start">
                                                <h8>Datos del Vehiculo</h8>
                                            </div>
                                        </div>
                                        <div class="row">
                                            <!-- Columna izquierda -->
                                            <div class="col-6">
                                                <div class="row mb-3">
                                                    <div class="col-5 text-start">
                                                        <h9>Placa</h9>
                                                    </div>
                                                    <div class="col-7">
                                                        <input type="text" class="form-control input-custom">
                                                    </div>
                                                </div>
                                                <div class="row mb-3">
                                                    <div class="col-5 text-start">
                                                        <h9>VIN</h9>
                                                    </div>
                                                    <div class="col-7">
                                                        <input type="text" class="form-control input-custom">
                                                    </div>
                                                </div>
                                                <div class="row mb-3">
                                                    <div class="col-5 text-start">
                                                        <h9>Modelo</h9>
                                                    </div>
                                                    <div class="col-7">
                                                        <input type="text" class="form-control input-custom">
                                                    </div>
                                                </div>
                                                <div class="row mb-3">
                                                    <div>
                                                        <div class="d-flex align-items-center mb-2 unidad-medida-container">
                                                            <label class="form-check-label me-2 text-green label-ajustado">Kilómetros</label>
                                                            <input type="radio" class="form-check-input" name="unidad-medida" id="kilometros">
                                                            <label class="form-check-label ms-3 me-2 text-green label-ajustado">Millas</label>
                                                            <input type="radio" class="form-check-input" name="unidad-medida" id="millas" checked>
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>

                                            <!-- Columna derecha -->
                                            <div class="col-6">
                                                <div class="row mb-3">
                                                    <div class="col-5 text-start">
                                                        <label for="marca" class="form-label">Marca</label>
                                                    </div>
                                                    <div class="col-7">
                                                        <input type="hidden" id="marcaId" name="Id" value="" />
                                                        <div class="input-group">
                                                            <input type="text" id="Nombre" class="form-control" placeholder="Seleccionar">
                                                            <button class="btn btn-outline-secondary btn-inside-input" type="button" data-bs-toggle="modal" data-bs-target="#ModalMarca" id="#ModalMarca">
                                                                <i class="fas fa-search">+</i>
                                                            </button>
                                                        </div>
                                                    </div>
                                                </div>
                                                <div class="row mb-3">
                                                    <div class="col-5 text-start">
                                                        <h9>Año</h9>
                                                    </div>
                                                    <div class="col-7">
                                                        <input type="text" class="form-control input-custom">
                                                    </div>
                                                </div>
                                                <div class="row mb-3">
                                                    <div class="col-5 text-start">
                                                        <label for="cliente" class="form-label">Cliente</label>
                                                    </div>
                                                    <div class="col-7">
                                                        <div class="input-group">
                                                            <input type="hidden" id="clienteId" name="Id" value="" />
                                                            <input type="text" id="NombreCliente" class="form-control" placeholder="Seleccionar">
                                                            <input type="hidden" id="PrimerApellido" value="" />
                                                            <input type="hidden" id="SegundoApellido" value="" />
                                                            <button class="btn btn-outline-secondary btn-inside-input" type="button" data-bs-toggle="modal" data-bs-target="#ModalCliente" id="#ModalCliente">
                                                                <i class="fas fa-search">+</i>
                                                            </button>
                                                        </div>
                                                    </div>
                                                </div>
                                                <div class="row mb-3">
                                                    <div class="col-5 text-start">
                                                        <h9>Distancia Recorrida</h9>
                                                    </div>
                                                    <div class="col-7">
                                                        <input type="text" class="form-control input-custom">
                                                    </div>
                                                </div>
                                            </div>
                                        </div>

                                        <div class="row botones">
                                            <div class="col-6 d-flex justify-content-end">
                                                <button type="button" class="btn btn-anular d-flex align-items-center justify-content-center"
                                                        data-bs-dismiss="modal" aria-label="Close">
                                                    Anular
                                                </button>
                                            </div>
                                            <div class="col-6 d-flex">
                                                <button type="button" class="btn btn-light d-flex align-items-center justify-content-center"
                                                        data-bs-dismiss="modal" aria-label="Close">
                                                    Guardar
                                                </button>
                                            </div>
                                        </div>
                                    </form>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <button class="btn btn-success btn-mt-3" type="button" data-bs-toggle="modal" data-bs-target="#ModalVehiculo">Crear +</button>
            </div>
        </div>


        <div class="table-responsive ">
            <table class="table table-bordered table-hover table-custom">
                <thead>
                    <tr>
                        <th class="text-nowrap">Dueño</th>
                        <th class="text-nowrap">Placa</th>
                        <th class="text-nowrap">Marca</th>
                        <th class="text-nowrap">Modelo</th>
                        <th class="text-nowrap">Año</th>
                        <th class="text-nowrap">VIN</th>
                    </tr>
                </thead>
                <tbody>
                    <tr>
                        <td class="Dueño"></td>
                        <td class="Placa"></td>
                        <td class="Marca"></td>
                        <td class="Modelo"></td>
                        <td class="Año"></td>
                        <td class="VIN"></td>
                    </tr>
                    <tr>
                        <td class="Dueño"></td>
                        <td class="Placa"></td>
                        <td class="Marca"></td>
                        <td class="Modelo"></td>
                        <td class="Año"></td>
                        <td class="VIN"></td>
                    </tr>
                    <tr>
                        <td class="Dueño"></td>
                        <td class="Placa"></td>
                        <td class="Marca"></td>
                        <td class="Modelo"></td>
                        <td class="Año"></td>
                        <td class="VIN"></td>
                    </tr>
                    <tr>
                        <td class="Dueño"></td>
                        <td class="Placa"></td>
                        <td class="Marca"></td>
                        <td class="Modelo"></td>
                        <td class="Año"></td>
                        <td class="VIN"></td>
                    </tr>
                </tbody>
            </table>
        </div>

        <div class="col-12 text-end">
            <div class="actions d-flex justify-content-start">
                <button class="btn btn-custom" type="button" data-bs-toggle="modal" data-bs-target="#ModalVehiculo">Modificar</button>
                <button class="btn btn-custom2" type="button" data-bs-toggle="modal" data-bs-target="#ModalEliminarVehiculo">Eliminar</button>
            </div>
        </div>

        <!-- Modal Principal Cliente -->
        <div class="modal" id="ModalCliente" tabindex="-1" aria-labelledby="ModalClienteLabel" aria-hidden="true">
            <div class="modal-dialog modal-dialog-centered modal-lg">
                <div class="modal-content">
                    <div class="modal-body fondo">
                        <div class="container-fluid">
                            <!-- Encabezado -->
                            <div class="row mb-4">
                                <div class="col-12 col-md-6 d-flex align-items-center">
                                    <div class="volver">
                                        <svg xmlns="http://www.w3.org/2000/svg" fill="currentColor" class="bi bi-arrow-left-circle-fill" viewBox="0 0 16 16">
                                            <path d="M8 0a8 8 0 1 0 0 16A8 8 0 0 0 8 0m3.5 7.5a.5.5 0 0 1 0 1H5.707l2.147 2.146a.5.5 0 0 1-.708.708l-3-3a.5.5 0 0 1 0-.708l3-3a.5.5 0 1 1 .708.708L5.707 7.5z" />
                                        </svg>
                                        <h5>Buscar Cliente</h5>
                                    </div>
                                </div>
                                <div class="col-12 col-md-6 text-end user-info">
                                    <img src="https://via.placeholder.com/40" alt="User Avatar" class="avatar">
                                    <span class="user-name">User</span>
                                </div>
                            </div>

                            <!-- Radio y campo de búsqueda -->
                            <div class="row mb-3">
                                <div class="col-12 col-md-8">
                                    <div class="d-flex align-items-center">
                                        <div class="form-check me-3">
                                            <input class="form-check-input" type="radio" name="searchOption" id="searchByName" value="name" checked>
                                            <label class="form-check-label" for="searchByName">Nombre</label>
                                        </div>
                                        <div class="form-check">
                                            <input class="form-check-input" type="radio" name="searchOption" id="searchByCedula" value="cedula">
                                            <label class="form-check-label" for="searchByCedula">Cédula</label>
                                        </div>
                                    </div>
                                    <input type="text" class="form-control mt-2" placeholder="Buscar Cliente">
                                </div>
                                <div class="col-12 col-md-3 mt-4">
                                    <button class="btn btn-success" type="button" data-bs-toggle="modal" data-bs-target="#ModalClienteAgregar">Crear +</button>
                                </div>
                            </div>

                            <!-- Tabla -->
                            @if (ViewBag.Clientes != null)
                            {
                                <div class="table-responsive ">
                                    <table class="table table-bordered table-hover table-custom" id="TablaClientes">
                                        <thead>
                                            <tr>
                                                <th class="text-nowrap">Cedula</th>
                                                <th class="text-nowrap">Nombre</th>
                                                <th class="text-nowrap">Correo</th>
                                                <th class="text-nowrap">Telefono</th>

                                            </tr>
                                        </thead>
                                        <tbody>
                                            @foreach (var item in ViewBag.Clientes)
                                            {
                                                <tr data-id="@item.Id" data-cedula="@item.Cedula" data-nombre="@item.Nombre"
                                                    data-primerapellido="@item.PrimerApellido" data-segundoapellido="@item.SegundoApellido"
                                                    data-correo="@item.Correo" data-telefono="@item.Telefono" onclick="seleccionarFila(this)">
                                                    <td class="Cedula">@item.Cedula</td>
                                                    <td class="Nombre">@item.Nombre @item.PrimerApellido @item.SegundoApellido</td>
                                                    <td class="Correo">@item.Correo</td>
                                                    <td class="Telefono">@item.Telefono</td>
                                                </tr>
                                            }
                                        </tbody>
                                    </table>
                                </div>
                            }
                            else
                            {
                                <p>No hay registro de trabajadores</p>
                            }

                            <!-- Acciones -->
                            <div class="col-12 text-end">
                                <div class="actions d-flex justify-content-start">
                                    <button class="btn btn-custom" type="button" id="btnSeleccionarClientes">Modificar</button>
                                    <button class="btn btn-custom2" type="button" data-bs-toggle="modal" data-bs-target="#ModalVehiculo" aria-label="close">Eliminar</button>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>


    <!-- Modal Principal Cliente -->
    <div class="modal" id="ModalMarca" tabindex="-1" aria-labelledby="ModalMarcaLabel" aria-hidden="true">
        <div class="modal-dialog modal-dialog-centered modal-lg">
            <div class="modal-content">
                <div class="modal-body fondo">
                    <div class="container-fluid">
                        <!-- Encabezado -->
                        <div class="row mb-4">
                            <div class="col-12 col-md-6 d-flex align-items-center">
                                <div class="volver">
                                    <svg xmlns="http://www.w3.org/2000/svg" fill="currentColor" class="bi bi-arrow-left-circle-fill" viewBox="0 0 16 16">
